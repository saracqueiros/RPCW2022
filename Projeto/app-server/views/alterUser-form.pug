extends layout

block content
    .w3-container.w3-white.w3-border.w3-round-large.w3-margin
        .w3-container.w3-gray
            h3 Alteração de Password
        form.w3-container(action='/api/users/editarPass/'+id method='post')
            label Nova Password:
            input.w3-input(type="password" name="password")
            input.w3-btn.w3-gray(type="submit" value="Guardar Alterações")

        form.w3-container(action='/api/users/editarPerm/'+id method='post')
            label Nível de permissões:
            input.w3-input(type="text" name="level")
            input.w3-btn.w3-gray(type="submit" value="Guardar Alterações")

        .w3-container.w3-gray
            address Generated by João Gonçalves and Sara Queirós, RPCW2022


