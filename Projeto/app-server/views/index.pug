extends layout

block content
  .w3-container.w3-margin.w3-display-middle
    img.w3-image.w3-animate-right(class="slides_index" width="4600" height="4000" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.mm.bing.net%2Fth%3Fid%3DOIP.Y3IwJvUod3sl0S34NZP3ZAHaEK%26pid%3DApi&f=1")
    img.w3-image.w3-animate-right(class="slides_index" width="4600" height="4000" src="https://files.merca20.com/uploads/2020/11/bigstock-Human-Resources-And-People-Net-327735244-1.jpg")
    img.w3-image.w3-animate-right(class="slides_index" width="4600" height="4000" src="https://pplware.sapo.pt/wp-content/uploads/2017/07/lupa_microsoft-1024x559.jpg")

  script.
    var myIndex = 0;
    carrossel();

    function carrossel() {
      var i;
      var x = document.getElementsByClassName("slides_index");
      for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";  
      }
      myIndex++;
      if (myIndex > x.length) {myIndex = 1}    
      x[myIndex-1].style.display = "block";  
      setTimeout(carrossel, 4000);    
    }
      
