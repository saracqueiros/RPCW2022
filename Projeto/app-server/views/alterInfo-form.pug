extends layout

block content
    .w3-container.w3-white.w3-border.w3-round-large.w3-margin
        .w3-container.w3-gray
            h3 Info
        form.w3-container(action='/api/recursos/'+id method='post')
            label Descricao:
            input.w3-input(type="text" name="desc")
            label Produtor:
            input.w3-input(type="text" name="produtor")
            label Data de Criação:
            input.w3-input(type="text" name="criacao")
            label Data de Submissão:
            input.w3-input(type="text" name="submissao")
            input.w3-btn.w3-gray(type="submit" value="Guardar Alterações")
        .w3-container.w3-gray
            address Generated by João Gonçalves and Sara Queirós, RPCW2022

